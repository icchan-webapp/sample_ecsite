<h2>商品一覧</h2><span>(全<%= @items.count %>件)</span>
<div class="container">
  <div class="items">
    <% @items.each do |item| %>
    <div class="item">
      <%= image_tag item.get_image, class: "item_image" %>
      <%= link_to item_path(item.id) do %>
        <p><%= item.name %></p>
      <% end %>
      <p>￥<%= (item.price * 1.1).to_i.to_s(:delimited) %></p>
    </div>
    <% end %>
  </div>
</div>
